{
    "manifest_version": 2,
    "name": "Website Shortcuts",
    "version": "0.1",
    "description": "",
    "browser_action": {
        "default_icon": "icons/icon19x19.png"
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "scripts/capture.js"
            ]
        }
    ],
    "options_page": "views/options.html",
    "short_name": "WS"
}